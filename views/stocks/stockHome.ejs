<% layout('layout/boilerplate') %>

<body>
    <div class="container mt-4">
        <h1 class="text-center">在庫一覧</h1>

        <div class="mb-3 mt-3 d-flex justify-content-center">
            <button class="btn btn-primary m-1" onclick="sortByDate()">Sort by Date</button>
            <button class="btn btn-danger m-1" onclick="deleteSelectedRows()">Delete Selected</button>
            <button class="btn btn-success m-1" data-bs-toggle="modal" data-bs-target="#addStockModal">Add Stock</button>
        </div>

        <!-- レスポンシブ対応のテーブル -->
        <form id="deleteForm" action="/stocks/delete?_method=DELETE" method="POST">
            <div class="table-responsive">
                <table id="stockTable" class="table table-bordered table-striped table-hover table-sm">
                    <thead class="thead-light">
                        <tr>
                            <th>Select</th>
                            <th>日付</th>
                            <th>商品名</th>
                            <th>購入数</th>
                            <th>購入価格</th>
                            <th>単価</th>
                            <th>残量</th>
                            <th>残量高(￥)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stocks.forEach(stock => { %>
                          <tr>
                            <td><input type="checkbox" name="ids" value="<%= stock._id %>"></td>
                            <td><%= stock.date.toISOString().slice(0, 10) %></td>
                            <td><%= stock.itemName %></td>
                            <td><%= stock.purchaseQuantity %></td>
                            <td><%= stock.purchasePrice %></td>
                            <td><%= stock.unitPrice || '-' %></td>
                            <td><%= stock.remaining || stock.purchaseQuantity %></td>
                            <td><%= stock.remainingValue || stock.purchasePrice %></td>
                          </tr>
                        <% }) %>
                      </tbody>                      
                </table>
            </div>
        </form>

        <!-- Add Stock Modal -->
        <div class="modal fade" id="addStockModal" tabindex="-1" role="dialog" aria-labelledby="addStockModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addStockModalLabel">Add New Stock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- 在庫追加用のフォーム -->
                        <form id="stockForm" action="/stocks/add" method="POST">
                            <div class="form-group">
                                <label for="date">Date</label>
                                <input type="date" class="form-control" name="date" required>
                            </div>
                            <div class="form-group">
                                <label for="itemName">Item Name</label>
                                <input type="text" class="form-control" name="itemName" required>
                            </div>
                            <div class="form-group">
                                <label for="purchaseQuantity">Purchase Quantity</label>
                                <input type="number" class="form-control" name="purchaseQuantity" required>
                            </div>
                            <div class="form-group">
                                <label for="purchasePrice">Purchase Price</label>
                                <input type="number" class="form-control" name="purchasePrice" required>
                            </div>
                            <div class="form-group">
                                <label for="unitPrice">Unit Price</label>
                                <input type="number" class="form-control" name="unitPrice">
                            </div>

                            <div class="d-flex justify-content-center">
                              <button type="submit" class="btn btn-success m-4">Add Stock</button>
                            </div>
                        </form>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/stock.js"></script>
</body>
</html>
