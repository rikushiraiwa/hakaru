<% layout('layout/boilerplate') %>

<body>
    <div class="container mt-4">
        <h2 class="text-center">Edit Recipe: <%= recipe.recipeName %></h2>

        <!-- Recipe IDをdata属性としてHTML内に埋め込む -->
        <div id="recipeData" data-recipe-id="<%= recipe._id %>"></div>

        <!-- Delete and Add Recipe Buttons -->
        <div class="mb-3 mt-3 d-flex justify-content-center">
            <button class="btn btn-success m-1" data-bs-toggle="modal" data-bs-target="#addItemModal">Add Item</button>
            <button class="btn btn-danger m-1" onclick="deleteSelectedRows()">Delete Selected</button>
        </div>



        <!-- Recipe NameとImageのバリデーション用フォーム -->
        <form id="editRecipeForm" novalidate>
            <div class="row">
                <!-- Recipe Nameの入力 -->
                <div class="col-md-6 mb-3">
                    <label for="recipeName">Recipe Name</label>
                    <input type="text" class="form-control" id="recipeNameInput" name="recipeName" value="<%= recipe.recipeName %>" required>
                    <div class="invalid-feedback">Please enter a Recipe Name.</div>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <!-- 画像アップロードフィールド -->
                <div class="col-md-6 mb-3">
                    <label for="recipeImage">Upload Recipe Image</label>
                    <input type="file" class="form-control" id="recipeImage" name="recipeImage" accept="image/*">
                    <div class="invalid-feedback">Please upload an image.</div>
                    <div class="valid-feedback">Image uploaded successfully!</div>
                </div>
            </div>
        </form>
        

        <!-- Recipe Items Table -->
        <table id="recipeTable" class="table table-bordered table-striped table-hover table-sm">
            <thead class="thead-light">
                <tr>
                    <th>Select</th>
                    <th>Item Name</th>
                    <th>Content</th>
                    <th>Unit Price</th>
                    <th>Amount Usage</th>
                    <th>Amount Fee</th>
                </tr>
            </thead>
            <tbody>
                <% recipe.items.forEach(function(item, index) { %>
                    <tr>
                        <td><input type="checkbox" name="selectRow" value="<%= index %>"></td>
                        <td><%= item.itemName %></td>
                        <td><%= item.content %></td>
                        <td><%= item.unitPrice %></td>
                        <td><%= item.amountUsage %></td>
                        <td><%= item.amountFee %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Add Recipe Modal -->
        <div class="modal fade" id="addItemModal" tabindex="-1" role="dialog" aria-labelledby="addItemModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addItemModalLabel">Add New Item</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Recipe addition form -->
                        <form id="modalItemForm" class="needs-validation" novalidate>
                            <div class="form-group">
                                <label for="itemName">Item Name</label>
                                <select name="itemName" id="itemSelect" class="form-select" required onchange="toggleNewItemField()">
                                    <option value="">Select an item</option>
                                    <% stocks.forEach(stock => { %>
                                        <option value="<%= stock.itemName %>"><%= stock.itemName %></option>
                                    <% }) %>
                                    <option value="new">+ Add New Item</option>
                                </select>
                                <div class="invalid-feedback">Please select an item.</div>
                                <input type="text" id="newItemName" class="form-control mt-2" placeholder="Enter new item name" style="display:none;">
                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <input type="number" class="form-control" name="content" required>
                                <div class="invalid-feedback">Please enter content value.</div>
                            </div>
                            <div class="form-group">
                                <label for="amountUsage">Amount Usage</label>
                                <input type="number" class="form-control" name="amountUsage" required>
                                <div class="invalid-feedback">Please enter amount usage.</div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-success m-4" onclick="addItem()">Add Item</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="total-container text-right mt-3"></div>
            <p class="font-weight-bold">Total: <span id="totalValue"></span></p>
        </div>

        <!-- Save and Delete Buttons -->
        <div class="mb-3 mt-3 d-flex justify-content-center">
            <button class="btn btn-primary m-1" id="saveChangesBtn">Save changes</button>
            <button class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#deleteRecipeModal">Delete Recipe</button>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteRecipeModal" tabindex="-1" role="dialog" aria-labelledby="deleteRecipeModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteRecipeModalLabel">Delete Recipe</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this recipe? This action
            <div class="modal-body">
                Are you sure you want to delete this recipe? This action cannot be undone.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteRecipe()">Delete</button>
              </div>
            </div>
          </div>
        </div>
    
        <!-- ローディングスピナー -->
        <div id="loadingSpinner" class="justify-content-center align-items-center" style="display:none !important; position:fixed; top:0; left:0; width:100%; height:100%; background-color:rgba(255,255,255,0.8); z-index:9999;">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>     
    
        <!-- サーバーサイドから受け取った stocks データをクライアントサイドで使えるように定義 -->
        <script>
            const stocks = <%- JSON.stringify(stocks) %>
        </script>
    
        <!-- JavaScriptファイルの読み込み -->
        <script src="/js/recipeEdit.js"></script>
    
    </body>
    </html>
    