<% layout('layout/boilerplate') %>

<div class="container mt-4">
    <h1 class="text-center">Recipe Detail</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= recipe.recipeName %></h5>
            <p class="card-text">Item Name: <%= recipe.itemName %></p>
            <p class="card-text">Content: <%= recipe.content %></p>
            <p class="card-text">Unit Price: <%= recipe.unitPrice %></p>
            <p class="card-text">Amount Usage: <%= recipe.amountUsage %></p>
            <p class="card-text">Amount Fee: <%= recipe.amountFee %></p>
        </div>
        <div class="card-footer">
            <a href="/recipes" class="btn btn-secondary">Back to Recipes</a>
        </div>
    </div>
</div>
