<% layout('layout/boilerplate') %>

<body>
    <div class="container mt-4">
        <h1 class="text-center">Please Add Your Recipe</h1>

        <div class="mb-3 mt-3 d-flex justify-content-center">
            <button class="btn btn-danger m-1" onclick="deleteSelectedRows()">Delete Selected</button>
            <button class="btn btn-success m-1" data-bs-toggle="modal" data-bs-target="#addRecipeModal">Add Recipe</button>
        </div>

        <div class="mb-3">
            <label for="recipeName">Recipe Name</label>
            <input type="text" class="form-control" id="recipeNameInput" name="recipeName" required>
            <div class="valid-feedback">Ok!</div>
        </div>

        <!-- 画像アップロードフィールドの追加 -->
        <div class="mb-3">
            <label for="recipeImage">Upload Recipe Image</label>
            <input type="file" class="form-control" id="recipeImage" name="recipeImage" accept="image/*">
        </div>
        <!-- ここまでが画像アップロードのためのフィールド -->

        <form id="deleteForm" action="/recipes/delete?_method=DELETE" method="POST">
            <table id="recipeTable" class="table table-bordered table-striped table-hover table-sm">
                <thead class="thead-light">
                    <tr>
                        <th>Select</th>
                        <th>Item Name</th>
                        <th>Content</th>
                        <th>Unit Price</th>
                        <th>Amount Usage</th>
                        <th>Amount Fee</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- テーブルはJavaScriptで動的に更新 -->
                </tbody>
            </table>
        </form>

        <!-- Add recipe Modal -->
        <div class="modal fade" id="addRecipeModal" tabindex="-1" role="dialog" aria-labelledby="addRecipeModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addRecipeModalLabel">Add New Recipe</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- レシピ追加用のフォーム（recipeNameはモーダル外で入力） -->
                        <form id="recipeForm">
                            <input type="hidden" name="recipeName" id="recipeNameHidden">

                            <div class="form-group">
                                <label for="itemName">Item Name</label>
                                <input type="text" class="form-control" name="itemName" required>
                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <input type="number" class="form-control" name="content">
                            </div>
                            <div class="form-group">
                                <label for="unitPrice">Unit Price</label>
                                <input type="number" class="form-control" name="unitPrice">
                            </div>
                            <div class="form-group">
                                <label for="amountUsage">Amount Usage</label>
                                <input type="number" class="form-control" name="amountUsage">
                            </div>
                            <div class="form-group">
                                <label for="amountFee">Amount Fee</label>
                                <input type="number" class="form-control" name="amountFee">
                            </div>

                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-success m-4" onclick="addRecipe()">Add Recipe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- レシピ全体を保存 -->
        <!-- enctype="multipart/form-data" をここで追加 -->
        <form id="recipeForm" enctype="multipart/form-data">
            <div class="text-center mt-3">
                <button class="btn btn-primary" onclick="submitRecipe()">Save Recipe</button>
            </div>
        </form>

        <div class="total-container text-right mt-3">
            <p class="font-weight-bold">Total: <span id="totalValue"></span></p>
        </div>
    </div>

    <script src="/js/recipe.js"></script>
</body>
</html>
