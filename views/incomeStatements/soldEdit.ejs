<% layout('layout/boilerplate') %>

<div class="container my-5">
    <h2 class="text-center mb-5">Income Statement</h2>

    <form action="/incomeStatements/update/<%= id %>?_method=PUT" method="POST">
        <!-- General Information Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white d-flex align-items-center justify-content-center" style="height: 70px;">
                <h2 class="mb-0">
                    <i class="fas fa-info-circle"></i> General Information
                </h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Register Date</th>
                                <th>Customer Name</th>
                                <th>Product Name</th>
                                <th>Product Price</th>
                                <th>Order Date</th>
                                <th>Shipping Date</th>
                                <th>Payment</th>
                                <th>Uncollected Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="date" name="registerDate" value="<%= registerDate %>" class="form-control" required /></td>
                                <td><input type="text" name="customerName" value="<%= customerName %>" class="form-control" required /></td>
                                <td>
                                    <select name="productName" class="form-select" required onchange="updateCOGS()">
                                        <option value="">Select a Product</option>
                                        <% recipes.forEach(function(recipe) { %>
                                            <option value="<%= recipe.recipeName %>" <%= recipe.recipeName === productName ? 'selected' : '' %>><%= recipe.recipeName %></option>
                                        <% }) %>
                                    </select>
                                </td>
                                <td><input type="number" name="productPrice" value="<%= productPrice %>" class="form-control" required /></td>
                                <td><input type="date" name="orderDate" value="<%= orderDate %>" class="form-control" required /></td>
                                <td><input type="date" name="shippingDate" value="<%= shippingDate %>" class="form-control" required /></td>
                                <td><input type="number" name="payment" value="<%= payment %>" class="form-control" required /></td>
                                <td><input type="number" name="uncollectedPrice" value="<%= uncollectedPrice %>" class="form-control" required /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sales Details Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-warning text-white d-flex align-items-center justify-content-center" style="height: 70px;">
                <h2 class="mb-0">
                    <i class="fas fa-chart-line"></i> Sales Details
                </h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Sales Revenue</th>
                                <td><input type="number" name="sales" id="sales" value="<%= sales %>" class="form-control" oninput="calculateTotals()" /></td>
                            </tr>
                            <tr>
                                <th>COGS (Cost of Goods Sold)</th>
                                <td><input type="number" name="cogs" id="cogs" value="<%= cogs %>" class="form-control" readonly /></td>
                            </tr>
                            <tr>
                                <th>Sales Commission</th>
                                <td><input type="number" name="salesCommission" id="salesCommission" value="<%= salesCommission %>" class="form-control" oninput="calculateTotals()" /></td>
                            </tr>
                            <tr>
                                <th>Transfer Fee</th>
                                <td><input type="number" name="transferFee" id="transferFee" value="<%= transferFee %>" class="form-control" oninput="calculateTotals()" /></td>
                            </tr>
                            <tr>
                                <th>Shipping Fee</th>
                                <td><input type="number" name="shippingFee" id="shippingFee" value="<%= shippingFee %>" class="form-control" oninput="calculateTotals()" /></td>
                            </tr>
                            <tr>
                                <th>Operating Expenses</th>
                                <td><input type="text" name="expenses" id="expenses" value="<%= expenses %>" class="form-control" readonly /></td>
                            </tr>
                            <tr>
                                <th>Gross Profit</th>
                                <td><span id="grossProfit"><%= grossProfit %></span></td>
                            </tr>
                            <tr>
                                <th>Net Profit</th>
                                <td><span id="netProfit"><%= netProfit %></span></td>
                            </tr>
                            <tr>
                                <th>Net Profit Ratio</th>
                                <td><span id="netRatio"><%= ratio %></span> %</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Update Button -->
        <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-lg btn-success">
                <i class="fas fa-save"></i> Update
            </button>
        </div>
    </form>
</div>

<!-- RecipesデータをJSON形式で渡す -->
<script id="recipesData" type="application/json">
    <%- JSON.stringify(recipes) %>
  </script>
  <script src="/js/sold.js"></script>