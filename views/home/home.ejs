<% layout('layout/boilerplate') %>

<body class="bg-light d-flex flex-column vh-100">
    <div class="container-fluid flex-grow-1">    
        <!-- ヘッダーセクション -->
        <header class="professional-header text-center py-5 mt-4">
            <div class="container">
                <h1 class="display-4">ようこそ Hakaru へ</h1>
                <p class="header-subtitle">効率的な在庫・レシピ管理システムをあなたの手元に</p>
            </div>
        </header>    

        <!-- メインコンテンツセクション -->
        <div class="container mt-5">
            <div class="row">
                <!-- サマリーカード -->
                <div class="col-md-12 mb-4">
                    <div class="row g-4">
                        <div class="col-lg-3 col-md-6">
                            <div class="card text-white bg-primary shadow-sm">
                                <div class="card-body text-center">
                                    <h4 class="card-title">レシピ総数</h4>
                                    <p class="card-text display-6"><%= totalRecipes %></p>
                                    <a href="/recipes/recipeHome" class="btn btn-warning">レシピを見る</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card text-white bg-success shadow-sm">
                                <div class="card-body text-center">
                                    <h4 class="card-title">在庫総数</h4>
                                    <p class="card-text display-6"><%= totalStocks %></p>
                                    <a href="/stocks/stockHome" class="btn btn-warning">在庫を見る</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card text-white bg-info shadow-sm">
                                <div class="card-body text-center">
                                    <h4 class="card-title">経費総額</h4>
                                    <p class="card-text display-6">￥<%= totalExpenses %></p>
                                    <a href="/expenses" class="btn btn-warning">経費を見る</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="card text-white bg-danger shadow-sm">
                                <div class="card-body text-center">
                                    <h4 class="card-title">売上総額</h4>
                                    <p class="card-text display-6">￥<%= totalSales %></p>
                                    <a href="/incomeStatements/soldInfor" class="btn btn-warning">売上を見る</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 売上対経費のチャートセクション -->
                <div class="col-md-12">
                    <h3 class="mt-5 mb-5 text-center">売上と経費</h3>
                    <div class="mb-4 card shadow-sm">
                        <div class="card-body">
                            <!-- グラフのキャンバス -->
                            <div class="chart-container" style="position: relative; height: 60vh; width: 100%;">
                                <canvas id="salesExpenseChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        window.totalSales = <%= totalSales %>;
        window.totalExpenses = <%= totalExpenses %>;
    </script>
    <script src="/js/home.js"></script>
    
</body>
