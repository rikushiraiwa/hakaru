<% layout('layout/boilerplate') %>

<body class="d-flex justify-content-center align-items-center vh-100">
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm" style="width: 24rem;">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">登録</h2>

        <form action="/users/register" method="POST">
          <!-- ユーザー名 -->
          <div class="mb-3">
            <label for="username" class="form-label">ユーザー名</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="ユーザー名を入力" required>
          </div>

          <!-- パスワード -->
          <div class="mb-3">
            <label for="password" class="form-label">パスワード</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="パスワードを入力" required>
          </div>

          <!-- 登録ボタン -->
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">登録</button>
          </div>
        </form>

        <!-- ログインリンク -->
        <p class="text-center mt-3">すでにアカウントをお持ちですか？ <a href="/users/login">こちらでログイン</a></p>
      </div>
    </div>
  </div>
</body>
