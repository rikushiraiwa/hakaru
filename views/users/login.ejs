<% layout('layout/boilerplate') %>

<body class="d-flex justify-content-center align-items-center vh-100">
  <div class="container d-flex justify-content-center align-items-center vh-100"  style="margin-top: -30px;">
    <div class="card shadow-sm" style="width: 24rem;">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">ログイン</h2>

        <!-- エラーメッセージ -->
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>

        <% if (success && success.length > 0) { %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
        <% } %>

        <form action="/users/login" method="POST">
          <!-- ユーザー名 -->
          <div class="mb-3">
            <label for="username" class="form-label">ユーザー名</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="ユーザー名を入力" required>
          </div>

          <!-- パスワード -->
          <div class="mb-3">
            <label for="password" class="form-label">パスワード</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="パスワードを入力" required>
          </div>

          <!-- ログインボタン -->
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">ログイン</button>
          </div>
        </form>

        <!-- 登録リンク -->
        <p class="text-center mt-3">アカウントをお持ちでないですか？ <a href="/register">こちらで登録</a></p>
      </div>
    </div>
  </div>
</body>
