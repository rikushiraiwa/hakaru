<% layout('layout/boilerplate') %>

<body>
    <div class="container mt-4">
        <h1 class="text-center">Please Add Your Expense</h1>

        <div class="mb-3 mt-3 d-flex justify-content-center">
            <button class="btn btn-primary m-1" onclick="sortByDate()">Sort by Date</button>
            <button class="btn btn-secondary m-1" data-bs-toggle="modal" data-bs-target="#confirmModal">Download Data</button>
            <button class="btn btn-danger m-1" onclick="deleteSelectedRows()">Delete Selected</button>
            <button class="btn btn-success m-1" data-bs-toggle="modal" data-bs-target="#addExpenseModal">Add Expense</button>
        </div>

       
        <form id="deleteForm" action="/expenses/delete?_method=DELETE" method="POST">
            <table id="expenseTable" class="table table-bordered table-striped table-hover table-sm">
                <thead class="thead-light">
                    <tr>
                        <th>Select</th>
                        <th>Date</th>
                        <th>Content</th>
                        <th>Supplier</th>
                        <th>Purchase</th>
                        <th>Consumable</th>
                        <th>Other Expense</th>
                        <th>Shipping Cost</th>
                        <th>Purchase Discount</th>
                        <th>Cash</th>
                        <th>Credit</th>
                    </tr>
                </thead>
                <tbody>
                    <% expenseData.forEach(function(expense) { %>
                        <tr>
                            <td><input type="checkbox" name="ids" value="<%= expense._id %>"></td>
                            <td><%= expense.date %></td>
                            <td><%= expense.content %></td>
                            <td><%= expense.supplier %></td>
                            <td><%= expense.purchase %></td>
                            <td><%= expense.consumable %></td>
                            <td><%= expense.otherExpense %></td>
                            <td><%= expense.shippingCost %></td>
                            <td><%= expense.purchaseDiscount %></td>
                            <td><%= expense.cash %></td>
                            <td><%= expense.credit %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </form>


        <!-- Add Expense Modal -->
        <div class="modal fade" id="addExpenseModal" tabindex="-1" role="dialog" aria-labelledby="addExpenseModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addExpenseModalLabel">Add New Expense</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- 経費追加用のフォーム -->
                        <form id="expenseForm" action="/expenses" method="POST">
                            <div class="form-group">
                                <label for="date">Date</label>
                                <input type="date" class="form-control" name="date" required>
                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <input type="text" class="form-control" name="content">
                            </div>
                            <div class="form-group">
                                <label for="supplier">Supplier</label>
                                <input type="number" class="form-control" name="supplier">
                            </div>
                            <div class="form-group">
                                <label for="purchase">Purchase</label>
                                <input type="number" class="form-control" name="purchase">
                            </div>
                            <div class="form-group">
                                <label for="consumable">Consumable</label>
                                <input type="number" class="form-control" name="consumable">
                            </div>
                            <div class="form-group">
                                <label for="otherExpense">Other Expense</label>
                                <input type="number" class="form-control" name="otherExpense">
                            </div>
                            <div class="form-group">
                                <label for="shippingCost">Shipping Cost</label>
                                <input type="number" class="form-control" name="shippingCost">
                            </div>
                            <div class="form-group">
                                <label for="purchaseDiscount">Purchase Discount</label>
                                <input type="number" class="form-control" name="purchaseDiscount">
                            </div>
                            <div class="form-group">
                                <label for="cash">Cash</label>
                                <input type="number" class="form-control" name="cash">
                            </div>
                            <div class="form-group">
                                <label for="credit">Credit</label>
                                <input type="number" class="form-control" name="credit">
                            </div>

                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-success m-4">Add Expense</button>
                            </div>
                            
                        </form>
                    
                    </div>
                </div>
            </div>
        </div>

        <div class="total-container text-right">
            <p class="font-weight-bold">Total: <span id="totalValue"></span></p>
        </div>
    </div>


    <!-- Confirm Modal for Downloading and Deleting -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">確認</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    データをCSVとしてダウンロードし、DBのデータを削除します。よろしいですか？
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
                    <button type="button" class="btn btn-primary" id="confirmDownload">ダウンロードして削除</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/expense.js"></script>
</body>
</html>