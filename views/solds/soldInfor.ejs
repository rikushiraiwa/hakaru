<% layout('layout/boilerplate') %>

<div class="container mt-4">
  <h2 class="text-center mb-4">Sold Information</h2>

  <div class="text-center">
    <a href="/incomeStatement" class="btn btn-primary mb-4">
      Register to Income Statement
    </a>
  </div>
  
  <div class="row">
    <% incomeStatements.forEach(function(statement) { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body text-center"> <!-- カード全体を中央寄せ -->
            <h5 class="card-title">Customer: <%= statement.customerName %></h5>
            <p class="card-text">
              <strong>Register Date:</strong> <%= statement.registerDate %><br />
              <strong>Product Name:</strong> <%= statement.productName %><br />
              <strong>Product Price:</strong> ¥<%= statement.productPrice %><br />
            </p>
            <a href="/soldEdit/edit/<%= statement._id %>" class="btn btn-warning btn-sm">Edit</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- ページネーションの追加 -->
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="/soldInfor?page=<%= currentPage - 1 %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a class="page-link" href="/soldInfor?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
      <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="/soldInfor?page=<%= currentPage + 1 %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      <% } %>
    </ul>
  </nav>
</div>
