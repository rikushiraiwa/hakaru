<% layout('layout/boilerplate') %>

<div class="container my-5">
  <h1 class="text-center mb-5">Income Statement</h1>

  <!-- General Information Section -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h2><i class="fas fa-info-circle"></i> General Information</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Register Date</th>
              <th>Customer Name</th>
              <th>Product Name</th>
              <th>Product Price</th>
              <th>Order Date</th>
              <th>Shipping Date</th>
              <th>Payment</th>
              <th>Uncollected Price</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><input type="date" value="<%= registerDate %>" class="form-control" placeholder="Register Date" /></td>
              <td><input type="text" value="<%= customerName %>" class="form-control" placeholder="Customer Name" /></td>
              <td><input type="text" value="<%= productName %>" class="form-control" placeholder="Product Name" /></td>
              <td><input type="number" value="<%= productPrice %>" class="form-control" placeholder="Product Price" /></td>
              <td><input type="date" value="<%= orderDate %>" class="form-control" placeholder="Order Date" /></td>
              <td><input type="date" value="<%= shippingDate %>" class="form-control" placeholder="Shipping Date" /></td>
              <td><input type="number" value="<%= payment %>" class="form-control" placeholder="Payment" /></td>
              <td><input type="number" value="<%= uncollectedPrice %>" class="form-control" placeholder="Uncollected Price" /></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Minne Sales Details Section -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-success text-white">
      <h2><i class="fas fa-shopping-cart"></i> Minne Sales Details</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <tbody>
            <tr>
              <th>Sales</th>
              <td><input type="number" id="sales" value="<%= sales %>" class="form-control" placeholder="Sales" oninput="calculateProfits()" /></td>
            </tr>
            <tr>
              <th>Sales Commission</th>
              <td><input type="number" id="salesCommission" value="<%= salesCommission %>" class="form-control" placeholder="Sales Commission" oninput="calculateProfits()" /></td>
            </tr>
            <tr>
              <th>Transfer Fee</th>
              <td><input type="number" id="transferFee" value="<%= transferFee %>" class="form-control" placeholder="Transfer Fee" oninput="calculateProfits()" /></td>
            </tr>
            <tr>
              <th>Shipping Fee</th>
              <td><input type="number" id="shippingFee" value="<%= shippingFee %>" class="form-control" placeholder="Shipping Fee" oninput="calculateProfits()" /></td>
            </tr>
            <tr>
              <th>Deposit Amount</th>
              <td><input type="text" id="depositAmount" value="<%= depositAmount %>" class="form-control" placeholder="Deposit Amount" readonly /></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Income Statement Section -->
  <div class="card shadow-sm">
    <div class="card-header bg-warning text-white">
      <h2><i class="fas fa-chart-line"></i> Income Statement</h2>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col">
          <label for="revenue" class="form-label">Sales Revenue:</label>
          <input type="number" id="revenue" value="<%= revenue %>" class="form-control" placeholder="Sales Revenue" oninput="calculateProfits()" />
        </div>
        <div class="col">
          <label for="cogs" class="form-label">Cost of Goods Sold (COGS):</label>
          <input type="number" id="cogs" value="<%= cogs %>" class="form-control" placeholder="Cost of Goods Sold (COGS)" oninput="calculateProfits()" />
        </div>
      </div>
      <div class="row mb-3">
        <div class="col">
          <label for="expenses" class="form-label">Operating Expenses:</label>
          <input type="number" id="expenses" value="<%= expenses %>" class="form-control" placeholder="Operating Expenses" oninput="calculateProfits()" />
        </div>
      </div>
      <div class="results">
        <h3 class="mt-4">Gross Profit: <span id="grossProfit">0.00</span></h3>
        <h3>Net Profit: <span id="netProfit">0.00</span></h3>
        <h3>Ratio: <span id="netRatio">0.00</span> %</h3>
      </div>
    </div>
  </div>

  <!-- Register Button -->
  <div class="text-center my-4">
    <button class="btn btn-lg btn-primary" onclick="window.location.href='/Sales'">
      <i class="fas fa-check"></i> Register
    </button>
  </div>
</div>

<script>
  function calculateProfits() {
    const revenue = parseFloat(document.getElementById('revenue').value) || 0;
    const cogs = parseFloat(document.getElementById('cogs').value) || 0;
    const expenses = parseFloat(document.getElementById('expenses').value) || 0;

    // Gross Profit 計算
    const grossProfit = revenue - cogs;

    // Net Profit 計算
    const netProfit = grossProfit - expenses;

    // Ratio 計算
    const netRatio = revenue !== 0 ? ((netProfit / revenue) * 100).toFixed(2) : 0;

    // 計算結果を表示
    document.getElementById('grossProfit').textContent = grossProfit.toFixed(2);
    document.getElementById('netProfit').textContent = netProfit.toFixed(2);
    document.getElementById('netRatio').textContent = netRatio;
  }
</script>
